<form method="post" action="{{ path('people_delete', {'uid': person.uid}) }}"
      onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ person.id) }}">
    <button class="d-none d-sm-inline-block btn btn-sm btn-danger btn-icon-split shadow-sm">
        <span class="icon text-white-50"><i class="fas fa-user-slash"></i></span><span class="text">Delete</span></button>
</form>
