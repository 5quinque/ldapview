<div class="col-xl-12 col-lg-12">
    <div class="card shadow mb-4">
        <!-- Card Header - Dropdown -->
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">{{ form_title }}</h6>
        </div>
        <!-- Card Body -->
        <div class="card-body">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button class="btn btn-sm btn-success btn-icon-split shadow-sm"><span class="icon text-white-50"><i
                            class="fas fa-save text-white-50"></i></span><span
                        class="text">{{ button_label|default('Save') }}</span></button>
            {{ form_end(form) }}
        </div>
    </div>
</div>

