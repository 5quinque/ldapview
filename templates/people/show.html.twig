{% extends 'base.html.twig' %}
{% block title %}People{% endblock %}
{% dump hosts %}
{% block body %}
    <!-- Begin Page Content -->
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="d-sm-flex align-items-center justify-content-between mb-4 mt-4">
            <h1 class="h3 mb-0 text-gray-800">Person - {{ person.uid }}</h1>
            <a href="{{ path('people_index') }}"
               class="d-none d-sm-inline-block btn btn-sm btn-primary btn-icon-split shadow-sm"><span
                        class="icon text-white-50"><i
                            class="fas fa-arrow-alt-circle-left"></i></span><span class="text">Back to list</span></a>
        </div>
        <div class="row">
            <div class="col-xl-4 col-lg-4">
                <div class="card shadow mb-4">
                    <!-- Card Header - Dropdown -->
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary">{{ person.uid }}</h6>
                    </div>
                    <!-- Card Body -->
                    <div class="card-body">
                        <div class="row">
                            <table class="table">
                                <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ person.id }}</td>
                                </tr>
                                <tr>
                                    <th>Type</th>
                                    <td>{{ person.type }}</td>
                                </tr>
                                <tr>
                                    <th>Uid</th>
                                    <td>{{ person.uid }}</td>
                                </tr>
                                <tr>
                                    <th>Gecos</th>
                                    <td>{{ person.gecos }}</td>
                                </tr>
                                <tr>
                                    <th>UidNumber</th>
                                    <td>{{ person.uidNumber }}</td>
                                </tr>
                                <tr>
                                    <th>GidNumber</th>
                                    <td>{{ person.gidNumber }}</td>
                                </tr>
                                <tr>
                                    <th>HomeDirectory</th>
                                    <td>{{ person.homeDirectory }}</td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="d-flex">
                            <a class="d-none d-sm-inline-block btn btn-sm btn-primary btn-icon-split shadow-sm mr-2"
                               href="{{ path('people_edit', {'uid': person.uid}) }}">
                                <span class="icon text-white-50"><i class="fas fa-user-edit"></i></span><span
                                        class="text">Edit</span></a>
                            {{ include('people/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-4 col-lg-4">
                <div class="card shadow mb-4">
                    <!-- Card Header -->
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary">Netgroups</h6>
                    </div>
                    <!-- Card Body -->
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12 table-netgroup-scroll">
                                <table class="table">
                                    <tbody>
                                    {% for netgroup in netgroups %}
                                        <tr>
                                            <th>Netgroup</th>
                                            <td>
                                                <a href="{{ path('netgroup_show', {'name': netgroup.name}) }}">{{ netgroup.name }}</a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-4 col-lg-4">
                <div class="card shadow mb-4">
                    <!-- Card Header -->
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary">Host access via netgroup</h6>
                    </div>
                    <!-- Card Body -->
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12 table-netgroup-scroll">
                                <table class="table">
                                    <tbody>
                                    {% for netgroup, host_list in hosts %}
                                        {% for host in host_list %}
                                        <tr>
                                            <th>{{ netgroup }}</th>
                                            <td>
                                                <a href="{{ path('host_show', {'name': host.name}) }}">{{ host.name }}</a>
                                            </td>
                                        </tr>
                                        {% endfor %}
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
