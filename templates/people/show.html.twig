{% extends 'base.html.twig' %}

{% block title %}People{% endblock %}

{% block body %}
    <h1>People</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ person.id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ person.type }}</td>
            </tr>
            <tr>
                <th>Uid</th>
                <td>{{ person.uid }}</td>
            </tr>
            <tr>
                <th>Gecos</th>
                <td>{{ person.gecos }}</td>
            </tr>
            <tr>
                <th>UidNumber</th>
                <td>{{ person.uidNumber }}</td>
            </tr>
            <tr>
                <th>GidNumber</th>
                <td>{{ person.gidNumber }}</td>
            </tr>
            <tr>
                <th>HomeDirectory</th>
                <td>{{ person.homeDirectory }}</td>
            </tr>
            {% for netgroup in netgroups %}
            <tr>
                <th>Netgroup</th>
                <td>{{ netgroup.name }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('people_index') }}">back to list</a>

    <a href="{{ path('people_edit', {'id': person.id}) }}">edit</a>

    {{ include('people/_delete_form.html.twig') }}
{% endblock %}
