{% extends 'base.html.twig' %}
{% block title %}People{% endblock %}

{% block body %}

    <!-- Begin Page Content -->
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="d-sm-flex align-items-center justify-content-between mb-4 mt-4">
            <h1 class="h3 mb-0 text-gray-800">People</h1>
            <a href="{{ path('people_new') }}"
               class="d-none d-sm-inline-block btn btn-sm btn-primary btn-icon-split shadow-sm"><span
                        class="icon text-white-50"><i
                            class="fas fa-user-plus fa-sm text-white-50"></i></span><span class="text">New User</span></a>
        </div>
        <!-- Area Chart -->
        <div class="col-xl-12 col-lg-12">
            <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">People</h6>
                </div>
                <!-- Card Body -->
                <div class="card-body">
                    <div class="row">`
                        <div class="col-sm-12 col-md-6">
                            <div class="dataTables_length" id="dataTable_length"><label>Show entries <select
                                            name="dataTable_length" aria-controls="dataTable"
                                            class="custom-select custom-select-sm form-control form-control-sm">
                                        <option value="10">10</option>
                                        <option value="25">25</option>
                                        <option value="50">50</option>
                                    </select></label></div>
                        </div>
                    </div>
                    <div class="row">
                        <table class="table table-borderless table-hover">
                            <thead class="">
                            <tr>
                                <th scope="col">Type</th>
                                <th scope="col">Uid</th>
                                <th scope="col">Gecos</th>
                                <th scope="col">UidNumber</th>
                                <th scope="col">GidNumber</th>
                                <th scope="col">HomeDirectory</th>
                                <th scope="col"></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for person in people %}
                                <tr>
                                    <td>{{ person.type }}</td>
                                    <td>{{ person.uid }}</td>
                                    <td>{{ person.gecos }}</td>
                                    <td>{{ person.uidNumber }}</td>
                                    <td>{{ person.gidNumber }}</td>
                                    <td>{{ person.homeDirectory }}</td>
                                    <td class="text-right">
                                        <a class="d-none d-sm-inline-block btn btn-sm btn-info btn-icon-split shadow-sm"
                                           href="{{ path('people_show', {'uid': person.uid}) }}"><span
                                                    class="icon text-white-50"><i
                                                        class="fas fa-expand-arrows-alt"></i></span><span class="text">Show</span></a>
                                        <a class="d-none d-sm-inline-block btn btn-sm btn-primary btn-icon-split shadow-sm"
                                           href="{{ path('people_edit', {'uid': person.uid}) }}"><span
                                                    class="icon text-white-50"><i
                                                        class="fas fa-user-edit"></i></span><span
                                                    class="text">Edit</span></a>                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="7">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    {% include('people/_pagination.html.twig') %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
