{% extends 'base.html.twig' %}

{% block title %}People index{% endblock %}

{% block body %}

    <!-- Begin Page Content -->
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="d-sm-flex align-items-center justify-content-between mb-4 mt-4">
            <h1 class="h3 mb-0 text-gray-800">People</h1>
            <a href="{{ path('people_new') }}"
               class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i
                        class="fas fa-user-plus fa-sm text-white-50"></i> New User</a>

        </div>

        <!-- Area Chart -->
        <div class="col-xl-12 col-lg-12">
            <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">People</h6>
                </div>
                <!-- Card Body -->
                <div class="card-body">
                    <div class="chart-area">
                        <table class="table table-striped table-borderless table-hover">
                            <thead class="thead-light">
                            <tr>
                                <th scope="col">Type</th>
                                <th scope="col">Uid</th>
                                <th scope="col">Gecos</th>
                                <th scope="col">UidNumber</th>
                                <th scope="col">GidNumber</th>
                                <th scope="col">HomeDirectory</th>
                                <th scope="col"></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for person in people %}
                                <tr>
                                    <td>{{ person.type }}</td>
                                    <td>{{ person.uid }}</td>
                                    <td>{{ person.gecos }}</td>
                                    <td>{{ person.uidNumber }}</td>
                                    <td>{{ person.gidNumber }}</td>
                                    <td>{{ person.homeDirectory }}</td>
                                    <td class="text-right">
                                        <a class="d-none d-sm-inline-block btn btn-sm btn-info shadow-sm"
                                           href="{{ path('people_show', {'id': person.id}) }}"><i
                                                    class="fas fa-expand-arrows-alt fa-sm text-white-50"></i> show</a>
                                        <a class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"
                                           href="{{ path('people_edit', {'id': person.id}) }}"><i
                                                    class="fas fa-user-edit fa-sm text-white-50"></i> edit</a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="8">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
