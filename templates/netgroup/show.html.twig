{% extends 'base.html.twig' %}

{% block title %}Netgroup{% endblock %}

{% block body %}
    <!-- Begin Page Content -->
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="d-sm-flex align-items-center justify-content-between mb-4 mt-4">
            <h1 class="h3 mb-0 text-gray-800">Netgroup - {{ netgroup.name }}</h1>
            <a href="{{ path('netgroup_index') }}"
               class="d-none d-sm-inline-block btn btn-sm btn-primary btn-icon-split shadow-sm"><span
                        class="icon text-white-50"><i
                            class="fas fa-arrow-alt-circle-left"></i></span><span class="text">Back to list</span></a>
        </div>
        <div class="row">
            <div class="col-xl-3 col-lg-3">
                <div class="card shadow mb-4">
                    <!-- Card Header -->
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary">{{ netgroup.name }}</h6>
                    </div>
                    <!-- Card Body -->
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12">
                                <table class="table">
                                    <tbody>
                                    <tr>
                                        <th>Name</th>
                                        <td>{{ netgroup.name }}</td>
                                    </tr>
                                    {% for person in people %}
                                        <tr>
                                            <th>Person</th>
                                            <td>{{ person.uid }}</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="d-flex">
                            <a class="d-none d-sm-inline-block btn btn-sm btn-primary btn-icon-split shadow-sm mr-2"
                               href="{{ path('netgroup_edit', {'name': netgroup.name}) }}">
                                <span class="icon text-white-50"><i class="fas fa-user-edit "></i></span><span
                                        class="text">Edit</span></a>
                            {{ include('netgroup/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-lg-3">
                <div class="card shadow mb-4">
                    <!-- Card Header -->
                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary">Hosts</h6>
                    </div>
                    <!-- Card Body -->
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12 table-netgroup-scroll">
                                <table class="table">
                                    <tbody>
                                    {% for host in hosts %}
                                        <tr>
                                            <th>Host</th>
                                            <td><a href="{{ path('host_show', {'name': host.name}) }}">{{ host.name }}</a></td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
