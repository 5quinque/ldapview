{% extends 'base.html.twig' %}
{% block title %}Netgroup{% endblock %}
{% block body %}
    <!-- Begin Page Content -->
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="d-sm-flex align-items-center justify-content-between mb-4 mt-4">
            <h1 class="h3 mb-0 text-gray-800">Hosts</h1>
        </div>
        <!-- Area Chart -->
        <div class="col-xl-12 col-lg-12">
            <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Hosts</h6>
                </div>
                <!-- Card Body -->
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                            <div class="dataTables_length"><label>Show entries <select
                                            id="limit"
                                            name="dataTable_length" aria-controls="dataTable"
                                            class="custom-select custom-select-sm form-control form-control-sm">
                                        <option value="10" {{ limit == 10 ? 'selected' }}>10</option>
                                        <option value="25" {{ limit == 25 ? 'selected' }}>25</option>
                                        <option value="50" {{ limit == 50 ? 'selected' }}>50</option>
                                        <option value="100" {{ limit == 100 ? 'selected' }}>100</option>
                                    </select></label></div>
                        </div>
                    </div>
                    <div class="row">
                        <table class="table table-striped table-borderless table-hover">
                            <thead class="thead-light">
                            <tr>
                                <th scope="col">Name</th>
                                <th scope="col"></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for host in hosts %}
                                <tr>
                                    <td>{{ host.name }}</td>
                                    <td class="text-right">
                                        <a class="d-none d-sm-inline-block btn btn-sm btn-info btn-icon-split shadow-sm"
                                           href="{{ path('host_show', {'name': host.name}) }}"><span
                                                    class="icon text-white-50"><i
                                                        class="fas fa-expand-arrows-alt"></i></span><span class="text">Show</span></a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="2">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    {% include('_pagination.html.twig') %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script>
        $("#limit").on('change', function (e) {
            console.log(this);
            self.location.href = `?limit=${this.value}`;
        });
    </script>
{% endblock %}